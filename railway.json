{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt",
    "watchPatterns": [
      "bot/**/*.py",
      "web/**/*.py",
      "requirements.txt"
    ]
  },
  "deploy": {
    "startCommand": "python bot/worker.py",
    "healthcheckPath": "/",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}